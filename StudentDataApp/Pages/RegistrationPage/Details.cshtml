@page "{studentId:int?}"
@model StudentDataApp.Pages.RegistrationPage.DetailsModel

@{
    ViewData["Title"] = "Details";
    ViewData["StudentID"] = Model.StudentID;
}

<h1>@Model.Student.LastName, @Model.Student.FirstName | @Model.Student.StudentSchoolID</h1>

<div>
    <h4>Registration</h4>
    <hr />
    @if (Model.Registrations.Count != 0)
    {

        foreach (var item in Model.Registrations)
        {
<dl class="row">

    <dt class="col-sm-2">
        @Html.DisplayNameFor(modelItem => item.signCourse)
    </dt>
    @if (item.signCourse != null && item.signCourse == false)
    {
        <dd class="col-sm-10">
            Signed Up!
        </dd>
    }
    else
    {
        <dd class="col-sm-10">
            Needs Signed Up!
        </dd>
    }
    <dt class="col-sm-2">
        @Html.DisplayNameFor(modelItem => item.priorClasses)
    </dt>
    @if (item.priorClasses != null && item.priorClasses == false)
    {
        <dd class="col-sm-10">
            Has Prior Credits!
        </dd>
    }
    else
    {
        <dd class="col-sm-10">
            No Prior Credits
        </dd>
    }
    <dt class="col-sm-2">
        @Html.DisplayNameFor(modelItem => item.transSet)
    </dt>
    @if (item.transSet != null && item.transSet == false)
    {
        <dd class="col-sm-10">
            No Prior Transcript
        </dd>
    }
    else if (item.transSet != null)
    {
        <dd class="col-sm-10">
            Missing Transcript Information
        </dd>
    }
    else
    {
        <dd class="col-sm-10">
            Transcript Recieved
        </dd>
    }
    <dt class="col-sm-2">
        @Html.DisplayNameFor(modelItem => item.transEval)
    </dt>
    @if (item.transEval != null && item.transEval == false)
    {
        <dd class="col-sm-10">
            Transcript has been Evaluated
        </dd>
    }
    else
    {
        <dd class="col-sm-10">
            Transcript has not been Evaluated
        </dd>
    }

    <dt class="col-sm-2">
        @Html.DisplayNameFor(modelItem => item.enrolled)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(modelItem => item.enrolled)
    </dd>
    @if (item.enrolled != null && item.enrolled == false)
    {
        <dd class="col-sm-10">
            Enrolled
        </dd>
    }
    else
    {
        <dd class="col-sm-10">
            Not Enrolled
        </dd>
    }
    <dt class="col-sm-2">
        @Html.DisplayNameFor(modelItem => item.termCreate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(modelItem => item.termCreate)
    </dd>
    @if (item.termCreate != null && item.termCreate == false)
    {
        <dd class="col-sm-10">
            Term has been created
        </dd>
    }
    else
    {
        <dd class="col-sm-10">
            Term has not been created
        </dd>
    }
    <dt class="col-sm-2">
        <a asp-page="./Edit" asp-route-studentId="@Model.StudentID" asp-route-itemId="@item.ID">Edit</a>
    </dt>
</dl>

        }
    }
    else
    {
        <p>There is no Registration for this student. <a asp-page="Create" asp-route-id=@Model.StudentID>Create a Registration item</a></p>

    }
</div>



