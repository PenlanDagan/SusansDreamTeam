@page "{id:int?}"
@model StudentDataApp.Pages.RegistrationPage.DetailsModel

@{
    ViewData["Title"] = "Details";
    ViewData["StudentID"] = Model.StudentID;
}

<h1>@Model.Student.LastName, @Model.Student.FirstName | @Model.Student.StudentSchoolID</h1>

<div>
    <h4>Registration</h4>
    <hr />
    @if (Model.Registrations.Count != 0)
    {

        foreach (var item in Model.Registrations)
        {
<dl class="row">

    <dt class="col-sm-2">
        @Html.DisplayNameFor(modelItem => item.signCourse)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(modelItem => item.signCourse)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(modelItem => item.priorClasses)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(modelItem => item.priorClasses)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(modelItem => item.transSet)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(modelItem => item.transSet)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(modelItem => item.transEval)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(modelItem => item.transEval)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(modelItem => item.enrolled)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(modelItem => item.enrolled)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(modelItem => item.termCreate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(modelItem => item.termCreate)
    </dd>
    <dt class="col-sm-2">
        <a asp-page="./Edit" asp-route-studentId="@Model.StudentID" asp-route-itemId="@item.ID">Edit</a>
    </dt>
</dl>

        }
    }
    else
    {
        <p>There is no Registration for this student. <a asp-page="Create" asp-route-id=@Model.StudentID>Create a Registration item</a></p>

    }
</div>



