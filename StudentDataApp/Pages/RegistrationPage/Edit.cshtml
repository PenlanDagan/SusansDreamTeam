@page
@model StudentDataApp.Pages.RegistrationPage.EditModel

@{
    ViewData["Title"] = "Edit";
    ViewData["StudentID"] = Model.StudentID;

}

<h1>Edit</h1>

<h4>Registration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Registration.ID" />
            <input type="hidden" asp-for="Registration.StudentID" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Registration.signCourse" /> @Html.DisplayNameFor(model => model.Registration.signCourse)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Registration.priorClasses" /> @Html.DisplayNameFor(model => model.Registration.priorClasses)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Registration.transSet" /> @Html.DisplayNameFor(model => model.Registration.transSet)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Registration.transEval" /> @Html.DisplayNameFor(model => model.Registration.transEval)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Registration.enrolled" /> @Html.DisplayNameFor(model => model.Registration.enrolled)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Registration.termCreate" /> @Html.DisplayNameFor(model => model.Registration.termCreate)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
