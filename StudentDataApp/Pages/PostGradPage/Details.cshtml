@page "{studentId:int?}"
@model StudentDataApp.Pages.EmploymentPage.DetailsModel

@{
    ViewData["Title"] = "Details";
    ViewData["StudentID"] = Model.StudentID;
}


<h1>@Model.Student.LastName, @Model.Student.FirstName | @Model.Student.StudentSchoolID</h1>

<div>
    <h4>Post-Graduation</h4>
    <hr />
    @if (Model.Employments.Count != 0)
    {
        foreach (var item in Model.Employments)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.GradCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.GradCode)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.GradTerm)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.GradTerm)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.CompName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.CompName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.CompLocation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.CompLocation)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.Salary)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.Salary)
                </dd>
    <dt class="col-sm-2">
        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
    </dt>
</dl>
        }
    }
    else
    {
        <p>There is no employment for this student. <a asp-page="Create" asp-route-studentId=@Model.StudentID>Create an employment item</a></p>}
</div>
