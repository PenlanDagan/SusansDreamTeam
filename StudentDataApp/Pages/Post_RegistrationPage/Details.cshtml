@page "{studentId:int?}"
@model StudentDataApp.Pages.Post_RegistrationPage.DetailsModel

@{
    ViewData["Title"] = "Details";
    ViewData["StudentID"] = Model.StudentID;

}

<h1>@Model.Student.LastName, @Model.Student.FirstName | @Model.Student.StudentSchoolID</h1>

<div>
    <h4>PostRegistration</h4>
    <hr />

    @if (Model.Post_Registrations.Count != 0)
    {
        foreach (var item in Model.Post_Registrations)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.schedComp)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.schedComp)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.StartTerm)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.StartTerm)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.emphasis)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.emphasis)
                </dd>
                <dt class="col-sm-2">
                    <a asp-page="./Edit" asp-route-studentId="@Model.StudentID" asp-route-itemId="@item.ID">Edit</a>
                </dt>

            </dl>
        }
    }
    else
    {
        <p>There is no Post-Registration information for this student. <a asp-page="Create" asp-route-id=@Model.StudentID>Create a Post Registration item</a></p>

    }

</div>

