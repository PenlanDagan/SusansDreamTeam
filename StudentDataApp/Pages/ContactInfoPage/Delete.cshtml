@page "{id:int?}"
@model StudentDataApp.Pages.ContactInfoPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
    ViewData["StudentID"] = Model.ContactInfo.StudentID;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Contact Info</h4>
    <hr />
    <dl class="row">
        @if (Model.ContactInfo.StreetAddress != null)
        {
            <dt class="col-sm-2">
                Home Address
            </dt>
            <dd class="col-sm-10">
                @($"{Model.ContactInfo.StreetAddress}, {Model.ContactInfo.City}, {Model.ContactInfo.State}, {Model.ContactInfo.Zip}")
            </dd>
        }
        @if (Model.ContactInfo.PhoneNumber != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model=> model.ContactInfo.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContactInfo.PhoneNumber)
            </dd>
        }
        @if (Model.ContactInfo.EmailAddress != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ContactInfo.EmailAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContactInfo.EmailAddress)
            </dd>

        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ContactInfo.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
