@page "{id:int?}"
@model StudentDataApp.Pages.InternshipPage.DetailsModel

@{
    ViewData["Title"] = "Details";
    ViewData["StudentID"] = Model.StudentID;
}

<h1>Details</h1>

<h1>@Model.Student.LastName, @Model.Student.FirstName | @Model.Student.StudentSchoolID</h1>

<div>
    <h4>Internship</h4>
    <hr />
    @if (Model.Internships.Count != 0)
    {
        foreach (var item in Model.Internships)
        {
            <dl class="row">
               
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.IntCompName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.IntCompName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.IntCompLocation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.IntCompLocation)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.IntWage)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.IntWage)
                </dd>
                <dt class="col-sm-2">
                    <a asp-page="./Edit" asp-route-studentId="@Model.StudentID" asp-route-itemId="@item.ID">Edit</a>
                </dt>


               </dl>
        }
    }
    else
    {
<p>There is no internship for this student. <a asp-page="Create" asp-route-id=@Model.StudentID>Create an internship item</a></p>}
</div>

